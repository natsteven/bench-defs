           timelimit="120 min"
           hardtimelimit="121 min"
           walltimelimit="15 min"
           memlimit="16 GB"
           cpuCores="4">

  <resultfiles>**/witness.{graphml,yml}</resultfiles>

  <rundefinition name="SV-COMP20_unreach-call">
    <tasks name="ReachSafety-Arrays">
